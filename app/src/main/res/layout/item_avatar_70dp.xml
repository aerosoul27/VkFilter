<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_margin="5dp">

    <me.alexeyterekhov.circularimageview.CircularImageView
        android:id="@+id/singleDialogIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/stub_user"
        app:border="false"
        app:shadow="true"
        android:visibility="visible"/>

    <RelativeLayout
        android:id="@+id/doubleDialogIconLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/doubleDialogIcon1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/doubleDialogIcon2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tripleDialogIconLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/tripleDialogIcon1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/tripleDialogIcon2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/tripleDialogIcon3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quadDialogIconLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/quadDialogIcon1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/quadDialogIcon2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/quadDialogIcon3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

        <me.alexeyterekhov.circularimageview.CircularImageView
            android:id="@+id/quadDialogIcon4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/stub_user"
            app:border="false"
            app:shadow="true"/>

    </RelativeLayout>

</FrameLayout>