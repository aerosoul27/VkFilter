<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.material_theme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/material_green</item>
        <item name="android:textColorPrimary">@color/material_greeny_white</item>
        <item name="colorAccent">@color/material_green</item>
        <item name="android:textColorSecondary">@color/material_greeny_white</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.material_theme.NoActionBar" parent="Theme.material_theme">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/material_greeny_white</item>
    </style>

</resources>