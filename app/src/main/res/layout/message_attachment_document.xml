<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/ActivityChat_Attachment.Rectangle">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/space_half"
        android:src="@drawable/attachment_document"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/font_light"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Офигенное название документа"/>

        <TextView
            android:id="@+id/docSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_mini"
            android:textColor="@color/font_light_tertiary"
            tools:text="12 мб"/>

    </LinearLayout>

</LinearLayout>