<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/material_white"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="8dp"
        android:orientation="vertical"
        android:background="@color/material_green">
        
        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_white"
            android:textSize="18sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Длинноеимя Фамилия"/>

        <TextView
            android:id="@+id/my_last_seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_greeny_white"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Последнее посещение:"/>

        <TextView
            android:id="@+id/my_last_seen_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/material_greeny_white"
            android:textSize="14sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="25 минут назад"/>

    </LinearLayout>

    <me.alexeyterekhov.circularimageview.CircularImageView
        android:id="@+id/my_photo"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="-48dp"
        android:layout_below="@id/top_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user_photo_loading"
        app:border="false"
        app:shadow="true"/>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        style="?android:attr/borderlessButtonStyle"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/material_green"
        android:text="Выход"/>

</RelativeLayout>