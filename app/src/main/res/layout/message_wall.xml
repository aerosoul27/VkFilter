<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/chat_spacer_mini">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="@dimen/chat_spacer"
        android:background="@drawable/black_round_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/chat_spacer"
            android:layout_marginRight="@dimen/chat_spacer"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my_text"
                android:textColor="@color/my_white"
                android:lines="1"
                android:ellipsize="end"
                android:text="Запись на стене"
                />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/my_text_micro"
                android:textColor="@color/my_white_transparent"
                android:text="Это вложение пока не поддерживается :("/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>