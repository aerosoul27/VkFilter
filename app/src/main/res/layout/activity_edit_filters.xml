<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bar_size"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bar_size"
            android:layout_marginTop="@dimen/bar_margin"
            android:background="@color/main_green">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bar_size"
                android:padding="@dimen/button_icon_padding"
                android:layout_marginLeft="@dimen/button_icon_padding"
                android:text="Действия:"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/main_white"/>

        <ImageView
                android:id="@+id/addButton"
                android:layout_width="@dimen/bar_size"
                android:layout_height="@dimen/bar_size"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_plus"
                android:padding="@dimen/button_icon_padding"
                android:layout_marginRight="@dimen/button_icon_padding"
                android:layout_marginLeft="@dimen/button_icon_padding"/>

        <ImageView
                android:id="@+id/editButton"
                android:layout_width="@dimen/bar_size"
                android:layout_height="@dimen/bar_size"
                android:layout_toLeftOf="@id/addButton"
                android:padding="@dimen/button_icon_padding"
                android:layout_marginRight="@dimen/button_icon_padding"
                android:layout_marginLeft="@dimen/button_icon_padding"
                android:src="@drawable/icon_preferences"/>

        <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="@dimen/bar_size"
                android:layout_height="@dimen/bar_size"
                android:padding="@dimen/button_icon_padding"
                android:layout_marginRight="@dimen/button_icon_padding"
                android:layout_marginLeft="@dimen/button_icon_padding"
                android:layout_toLeftOf="@id/editButton"
                android:src="@drawable/icon_delete"/>

    </RelativeLayout>

</LinearLayout>