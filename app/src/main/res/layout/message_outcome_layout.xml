<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
            android:id="@+id/messageTopMargin"
            android:layout_width="0dp"
            android:layout_height="@dimen/chat_spacer_big"/>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="@dimen/chat_spacer"
                  android:gravity="right">

        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/date_top"
                android:layout_marginRight="@dimen/chat_spacer"
                android:textSize="@dimen/my_text_micro"
                android:textColor="@color/my_gray"
                android:text="18:05"/>

        <LinearLayout
                android:id="@+id/messageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/message_out"
                android:gravity="center"
                android:paddingLeft="@dimen/text_padding_right"
                android:paddingTop="@dimen/text_padding_top"
                android:paddingBottom="@dimen/text_padding_bottom"
                android:paddingRight="@dimen/text_padding_left">

            <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/messageText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="@dimen/my_text"
                    app:emojiconSize="@dimen/my_emoji"
                    android:textColor="@color/my_white_greeny"
                    android:textColorLink="@color/my_links_color"
                    android:linksClickable="true"
                    android:autoLink="web|email"
                    android:text="Привет! Я так давно тебя не видел! Как твои дела?\nПриедешь в Слюдянку?"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>