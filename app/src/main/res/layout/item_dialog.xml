<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_white">

        <ImageView
                android:id="@+id/unreadBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/my_green_lighter"
                android:visibility="invisible"/>

        <LinearLayout android:id="@+id/dialogLayout"
                      android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dialog_item_size">

            <ImageView
                    android:id="@+id/singleDialogIcon"
                    android:layout_width="@dimen/dialog_item_size"
                    android:layout_height="@dimen/dialog_item_size"
                    android:padding="@dimen/dialog_item_margin"
                    android:src="@drawable/stub_user"/>

            <RelativeLayout
                    android:id="@+id/doubleDialogIconLayout"
                    android:layout_width="@dimen/dialog_item_size"
                    android:layout_height="@dimen/dialog_item_size"
                    android:padding="@dimen/dialog_item_margin"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/doubleDialogIcon1"
                        android:layout_width="33dp"
                        android:layout_height="70dp"
                        android:src="@drawable/stub_user"
                        android:scaleType="centerCrop"/>

                <ImageView
                        android:id="@+id/doubleDialogIcon2"
                        android:layout_width="33dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/stub_user"
                        android:scaleType="centerCrop"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/tripleDialogIconLayout"
                    android:layout_width="@dimen/dialog_item_size"
                    android:layout_height="@dimen/dialog_item_size"
                    android:padding="@dimen/dialog_item_margin"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/tripleDialogIcon1"
                        android:layout_alignParentLeft="true"
                        android:layout_width="33dp"
                        android:layout_height="70dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/stub_user"/>

                <ImageView
                        android:id="@+id/tripleDialogIcon2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dialog_item_margin"
                        android:src="@drawable/stub_user"                android:scaleType="centerCrop"/>

                <ImageView
                        android:id="@+id/tripleDialogIcon3"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/stub_user"/>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/quadDialogIconLayout"
                    android:layout_width="@dimen/dialog_item_size"
                    android:layout_height="@dimen/dialog_item_size"
                    android:padding="@dimen/dialog_item_margin"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/quadDialogIcon1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/stub_user"/>

                <ImageView
                        android:id="@+id/quadDialogIcon2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/stub_user"/>

                <ImageView
                        android:id="@+id/quadDialogIcon3"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/stub_user"/>

                <ImageView
                        android:id="@+id/quadDialogIcon4"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:src="@drawable/stub_user"/>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_item_top_size"
                        android:layout_marginTop="@dimen/dialog_item_margin"
                        android:layout_marginRight="@dimen/dialog_item_margin">

                    <ImageView
                            android:id="@+id/dialogFilterIcon"
                            android:layout_width="@dimen/dialog_item_top_size"
                            android:layout_height="@dimen/dialog_item_top_size"
                            android:layout_alignParentLeft="true"
                            android:src="@drawable/group_icon_01"
                            android:visibility="gone"/>

                    <TextView
                            android:id="@+id/dialogDate"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dialog_item_top_size"
                            android:layout_marginLeft="@dimen/dialog_item_margin"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:textSize="14sp"
                            android:textColor="@color/my_gray"
                            android:textStyle="italic"
                            android:text="14 июл"/>

                    <ImageView
                            android:id="@+id/dialogOnline"
                            android:layout_width="11dp"
                            android:layout_height="11dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dialog_item_margin"
                            android:layout_toLeftOf="@id/dialogDate"
                            android:src="@drawable/icon_online"/>

                    <TextView
                            android:id="@+id/dialogName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dialog_item_top_size"
                            android:layout_toLeftOf="@id/dialogOnline"
                            android:layout_toRightOf="@id/dialogFilterIcon"
                            android:layout_marginLeft="@dimen/dialog_item_margin"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:lines="1"
                            android:ellipsize="end"
                            android:textSize="16sp"
                            android:textColor="@color/my_black"
                            android:text="Федосов"/>

                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/dialogMessageLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dialog_item_bottom_size"
                        android:layout_marginTop="@dimen/dialog_item_margin"
                        android:layout_marginRight="@dimen/dialog_item_margin"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/dialogSenderIcon"
                            android:layout_width="@dimen/dialog_item_bottom_size"
                            android:layout_height="@dimen/dialog_item_bottom_size"
                            android:src="@drawable/stub_user"/>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <ImageView
                                android:id="@+id/unreadMessage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:visibility="invisible"
                                android:src="@color/my_green_lighter"/>

                        <TextView
                                android:id="@+id/dialogLastMessage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dialog_item_margin"
                                android:gravity="center_vertical"
                                android:lines="2"
                                android:ellipsize="end"
                                android:textColor="@color/my_gray"
                                android:textSize="14sp"
                                android:text="А я сегодня проехал 60 км! Ужас как устал :( Проткнул колесо в 30 км от города :D"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>