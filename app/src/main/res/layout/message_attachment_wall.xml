<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    style="@style/ActivityChat_Attachment.Rectangle">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/space_half"
        android:src="@drawable/attachment_wall"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space"
        android:layout_marginRight="@dimen/space"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/font_light"
            android:lines="1"
            android:ellipsize="end"
            android:text="@string/chat_label_wall_attachment"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/font_micro"
            android:textColor="@color/font_light_tertiary"
            tools:text="Это вложение пока не поддерживается :("/>

    </LinearLayout>

</LinearLayout>