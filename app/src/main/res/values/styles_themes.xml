<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ui_primary</item>
        <item name="colorPrimaryDark">@color/ui_primary_dark</item>
        <item name="colorAccent">@color/ui_accent</item>
        <item name="android:windowBackground">@color/m_white</item>
        <item name="android:textColorPrimary">@color/font_light</item>
        <item name="android:textColorSecondary">@color/font_light_secondary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/ui_primary</item>
    </style>

    <style name="MySettingsTheme" parent="MyAppTheme">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textColorSecondary">@color/font_dark_secondary</item>
    </style>

    <style name="MyFullscreenTheme" parent="MyAppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>