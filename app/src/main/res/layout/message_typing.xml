<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="22dp"
    android:layout_marginTop="@dimen/cell_10"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/typingIcon"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="@dimen/cell_05"
        android:layout_gravity="center_vertical"
        android:scaleType="fitStart"
        android:alpha="0.5"
        android:src="@drawable/ic_typing"/>

    <TextView
        android:id="@+id/typingText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:lines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/font_dark_secondary"
        android:textSize="@dimen/font_mini"
        tools:text="Алексей набирает сообщение"/>

</LinearLayout>